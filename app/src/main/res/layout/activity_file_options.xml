<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<!--  TODO: Set to same size center max width align left-->
  <TextView
      android:id="@+id/tv_current_grade"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text="@string/curr_grade"
      android:textSize="20sp"/>

  <TextView
      android:id="@+id/tv_how_much"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:gravity="center"
      android:textAlignment="center"
      android:text=""/>

  <EditText
      android:id="@+id/et_how_much"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:ems="10"
      android:backgroundTint="@color/error"
      android:hint="@string/what_grade"
      android:inputType="numberDecimal" />

  <Button
      android:id="@+id/b_edit_grades"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text="@string/modify_grades"
      android:onClick="openGrades"/>

  <Button
      android:id="@+id/b_how_much"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:onClick="showHowMuch"
      android:text="@string/how_much"/>

</LinearLayout>

